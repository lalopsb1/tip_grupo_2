.container-fluid
  .row
    .col-md-1
      - avatar = user_avatar(@user)
      = image_tag(avatar, class: 'l-profile-image-bg')
    .col-md-2
      h2 #{@user.name}
    .col-md-1.l-profile-link
      =  button_to 'Editar perfil',  edit_user_path(@user), method: :get, class: 'btn button'
  .row.top-15
    .col-md-1
    .col-md-2
      p Mail: #{@user.email}
  .row.top-15
    .col-md-1
    .col-md-2
      p Direccion: #{@user.address}

