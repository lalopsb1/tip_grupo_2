.container.book_card
  h1 Mi Perfil
  hr
  .row
    .col-sm-3
      - avatar = user_avatar(@user)
      = image_tag(avatar, class: 'square-thumbnail', size: "250")
    .col-sm-4
      h1 #{@user.name}
      h4 #{@user.email}
      h4 #{@user.address}
      br
      = button_to 'Editar perfil',  edit_user_path(@user), method: :get, class: 'btn btn-info'

