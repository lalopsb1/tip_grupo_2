- def msg(status) return "#{status}" end
.container.book_card
  .col-md-4
    h1 Registrarse
    hr
  .col-md-8
    div class ='col-md-16 panel panel-default'
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = form_group_for f, :name, label: false do
            .input-group
              span class="input-group-addon"
                span class="fa fa-user fa-lg fa-fw"
              =f.text_field :name, class: 'form-control', placeholder: 'Nombre de usuario'
          = form_group_for f, :address, label: false do
            .input-group
              span class="input-group-addon"
                span class="fa fa-map-marker fa-lg fa-fw"
              = f.text_field :address, class: 'form-control', placeholder: 'Direcci칩n'
          = form_group_for f, :email, label: false do
            .input-group
              span class="input-group-addon"
                span class="fa fa-at fa-lg fa-fw"
              = f.email_field :email, class: 'form-control', placeholder: 'Email'
          = form_group_for f, :password, label: false do
            .input-group
              span class="input-group-addon"
                span class="fa fa-key fa-lg fa-fw"
              = f.password_field :password, class: 'form-control', placeholder: 'Contrase침a'
          = form_group_for f, :password_confirmation, label: false do
            .input-group
              span class="input-group-addon"
                span class="fa fa-key fa-lg fa-fw"
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmaci칩n de contrase침a'
          = f.submit("Continuar", class:"btn btn-classic")
          br
          br
          = render "users/shared/links"