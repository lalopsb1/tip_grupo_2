.container.book_card
  h1 Editar Perfil
  hr
  .row
    .col-sm-3
      - avatar = user_avatar(@user)
      = image_tag(avatar, class: 'square-thumbnail', size: "250")
    .col-sm-6
      = form_for @user, class: 'form-group' do |form|
        = form.label :name,'Nombre', class: 'h4'
        = form.text_field :name, placeholder: 'Escriba aqui su nombre y apellido', class: 'form-control form-control-lg', type: 'text', required: true
        = form.label :address, 'Dirección', class: 'h4'
        = form.text_field :address, placeholder: 'Escriba aqui su dirección', class: 'form-control form-control-lg', type: 'text', required: true
        = form.label :avatar, 'Avatar', class: 'h4'
        = form.text_field :avatar, placeholder: 'Inserte aqui la URL de la imagen deseada', class: 'form-control form-control-lg', type: 'text', required: true
        br
        = form.submit 'Aceptar', class: 'btn btn-primary'