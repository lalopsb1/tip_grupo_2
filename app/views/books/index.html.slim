.container.book_card
    h1 Todos los libros
    hr
    = form_tag(books_path, method: :get, id: "search-form") do
        .col-sm-4
            = text_field_tag :search_title, params[:search_title], placeholder: "Buscar por t√≠tulo", class: 'form-control form-control-lg'
        .col-sm-4
            = text_field_tag :search_author, params[:search_author], placeholder: "Buscar por autor", class: 'form-control form-control-lg'
        .col-sm-4
            = submit_tag "Buscar", class: 'btn btn-classic'
    =render layout: 'books/index_table' do |donation|
        - distance = Geocoder::Calculations.distance_between([donation.giver.latitude, donation.giver.longitude], [current_user.latitude, current_user.longitude], units: :km).round(1)
        td = "#{distance} Km."
        td = "giver: #{[donation.giver.latitude, donation.giver.longitude]}, yo: #{[current_user.latitude, current_user.longitude]}"
        - avatar = user_avatar(donation.giver)
        td=image_tag(avatar, class: 'l-profile-image')
        td= donation.giver.email
        td= link_to 'Pedir prestado', edit_book_path(donation), class: 'btn btn-contrast'