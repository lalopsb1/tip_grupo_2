.container-fluid
  .row
  .col-md-6
    h1 Todos los libros
    .actions
    =render layout:'books/index_table' do |book|
      -if book.reading
        - copies = book.copies[1..-1]
      -else
        - copies = book.copies
      - copies.each do |copy|
        - avatar = user_avatar(copy.user)
        td= image_tag(avatar, class: 'l-profile-image')
        td= copy.user.email
        td= link_to 'Pedir prestado', edit_book_path(copy)
        tr
        td
        td
        td
        td