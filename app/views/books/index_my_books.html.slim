.container.book_card
  h1 Mis Libros
  hr
  =render layout:'books/index_table' do |copy|
    - if copy.reading
      td= button_to 'Finalizar Lectura', finish_book_path(copy), method: :put, class: 'btn btn-outline-primary'
    - else
      td= button_to 'Comenzar Lectura', start_book_path(copy), method: :put, class: 'btn btn-outline-primary'