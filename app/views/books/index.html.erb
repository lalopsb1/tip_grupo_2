<h1>Todos los libros</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Autores</th>
    <th>ISBN</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.isbn %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Rent', edit_book_path(book)%></td>
    </tr>
  <% end %>
</table>